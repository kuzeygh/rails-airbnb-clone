<% if @event.photo? %>
  <div class="banner-event" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.5) 50%), url('<%= cl_image_path @event.photo %>')">
<% else %>
  <div class="banner-event" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.5) 50%), url('https://images.unsplash.com/photo-1478812954026-9c750f0e89fc?dpr=1&auto=format&fit=crop&w=1500&h=1000&q=80&cs=tinysrgb&crop=&bg=')">
<% end %>
    <div class="banner-event-text">
      <h1><%= @event.name %></h1>
      <%= link_to "Attend this event", event_book_path(@event), class: "navbar-wagon-item navbar-wagon-button btn" %>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class='col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3'>

      </div>
    </div>
  </div>
</div>

<div class="container" style="padding: 50px 0;">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <p><i class="fa fa-calendar" aria-hidden="true"></i> <%= @event.event_time %> </p>
      <hr>
      <p><i class="fa fa-map-marker lg" aria-hidden="true"></i> <%= @event.location %> </p>
      <hr>
      <p><i class="fa fa-list" aria-hidden="true"></i> <%= @event.category %> </p>
      <hr>
      <p><i class="fa fa-user" aria-hidden="true"></i> <%= @event.user.first_name %> </p>
      <hr>
      <p><span class="event-category">Description:</span> <%= @event.description %>
        <p style="margin: 0 auto"><%= link_to "Attend this event", event_book_path(@event), class: "navbar-wagon-item navbar-wagon-button btn attend-button" %></p>

      </p>

      <div>
          <p></br></p>
      </div>
      <%= link_to "Go back", events_path %>
    </div>
  </div>
</div>
<ul>
<% @event.attenders.each do |user| %>
  <li><%= user.first_name %></li>
<% end %>
</ul>

