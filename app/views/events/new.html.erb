<h1>Events#new</h1>
<p>Find me in app/views/events/new.html.erb</p>

<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :event_time, required: true, autofocus: true %>
    <%= f.input :description, required: true, autofocus: true %>
    <%= f.input :category, required: true, autofocus: true %>
    <%= f.input :location, required: true, autofocus: true %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <p>*Be nice, add an horizontal picture*</p>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create event" %>
  </div>
<% end %>
