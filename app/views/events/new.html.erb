<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1 class="text-center">Create a new event!</h1>

      <div class="new-event-wrapper">
      <%= simple_form_for(@event) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true %>
          <%= f.input :event_time, required: true, autofocus: true %>
          <%= f.input :description, required: true, autofocus: true %>
          <%= f.input :category, required: true, autofocus: true %>
          <%= f.input :location, required: true, autofocus: true %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.hidden_field :user_id, value: current_user.id %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create event" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
