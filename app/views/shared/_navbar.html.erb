<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" style="width: 150px;">
    <img src="https://eventify.it/assets/eventify_logo_beta-babf07c00f13850d2d2f0b6bc40377d6.png" />
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Button (call-to-action) -->
    <div style="margin: 0 20px 0 0;">
      <%= link_to "Create an event", new_event_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    </div>
    <!-- Text link -->
    <!-- <a href="" class="navbar-wagon-item navbar-wagon-link"><i class="fa fa-question-circle fa-lg" aria-hidden="true"></i>
    </a> -->

    <!-- Text link -->
      <% if user_signed_in? %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Log In", new_user_session_path %>
      <% end %>

    <!-- Profile picture and dropdown -->

    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if user_signed_in? %>
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li> <%= link_to "Profile", edit_user_registration_path %></li>
            <li> <%= link_to "Dashboard", dashboard_path(current_user) %></li>
            <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        <% end %>
      </div>
    </div>

    <!-- Dropdown appearing on mobile only -->
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li> <%= link_to "Profile", edit_user_registration_path %></li>
          <li> <%= link_to "Dashboard", dashboard_attendances_path %></li>
          <li><a href="#">Log Out</a></li>

        </ul>
      </div>
    </div>

  </div>
</div>
